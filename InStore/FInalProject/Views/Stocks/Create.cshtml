@model main.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="store_id" class="control-label"></label>
                <select asp-for="store_id" class ="form-control" asp-items="ViewBag.store_id"></select>
            </div>
            <div class="form-group">
                <label asp-for="product_id" class="control-label"></label>
                <input asp-for="product_id" class="form-control" />
