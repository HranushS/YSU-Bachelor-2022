@model IEnumerable<main.Models.Product>

@{
    ViewData["Title"] = "Products list";
}


    <div class="row pt-3">
        <div class="col-6">
            <h1 class="text-primary">Products list</h1>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add New Product
			</a>
		</div>
        <hr>
<table class="table table-hover content-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.product_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brand)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.product_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.size)
            </td>
            @*<td>
            <img src="@("~/images/" + item.img)" asp-append-version="true" class="rounded-circle" width="250px" height="250px"   />
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.brand)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.product_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.product_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.product_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<br><br />